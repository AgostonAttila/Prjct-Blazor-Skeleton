@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Components.Authorization

@*CascadingAuthenticationState Name="SessionID" Value="this.ID"*@
<CascadingAuthenticationState >
    <Router AppAssembly="@typeof(App).Assembly" >
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(LayoutFullScreen)">
				<NotAuthorized>					
						<SingInCover/>					
				</NotAuthorized>
			</AuthorizeRouteView>
			<FocusOnNavigate RouteData="@routeData" Selector="h1" />
		</Found>
		<NotFound>
			<PageTitle>Not found</PageTitle>
			<LayoutView Layout="@typeof(LayoutFullScreen)">
				<Error404 />
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>

